<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryDark"
    tools:context=".ui.activities.DashBoardActivity">


    <FrameLayout
        android:id="@+id/dashboardContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/guideline4"
        />

    <com.ismaeldivita.chipnavigation.ChipNavigationBar
        android:id="@+id/bottomChip"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/custom_txt_input_shape"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="@dimen/h8"
        app:cnb_radius="10dp"
        app:cnb_menuResource="@menu/menu"

        app:cnb_unselectedColor="@android:color/darker_gray" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.02872777" />


</androidx.constraintlayout.widget.ConstraintLayout>